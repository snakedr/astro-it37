---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro'; 
import ContactDetails from '../components/ContactDetails.astro';
// ИЗМЕНЕНИЕ: Используем абсолютный путь @/ для надежности
import ContactForm from '@/components/ContactForm.astro'; 

// activeLink используется для подсветки активного пункта в Header
---

<MainLayout title="Контакты | IT37" activeLink="Контакты">
    <Header activeLink="Контакты" />
    
    <section class="hero-page">
        <div class="container">
            <h1 style="color:var(--accent);">Наш Инженерный Центр</h1>
            <p>
                Мы всегда на связи. Вы можете связаться с нами по телефону, написать на электронную почту или посетить наш офис в Иваново.
            </p>
        </div>
    </section>

    <section class="section" style="padding-top: 0;">
        <ContactDetails />
        <ContactForm />
    </section>

    <Footer />
</MainLayout>