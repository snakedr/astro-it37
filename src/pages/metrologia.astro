---
import MainLayout from '@/layouts/MainLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro'; 
// Используем ConstrainedContactBanner для ограниченной ширины
import ConstrainedContactBanner from '@/components/ConstrainedContactBanner.astro'; 
// Компоненты для контента (будут созданы ниже)
import MetrologiaCards from '@/components/MetrologiaCards.astro';
import MetrologiaProcess from '@/components/MetrologiaProcess.astro';

const ACTIVE_LINK = "Метрология";
const PHONE_METRO = "+7 (4932) 37-25-55 (доб. 105)";
const EMAIL_METRO = "sea@it37.ru";
---

<MainLayout title="Поверка и Метрология | IT37" activeLink={ACTIVE_LINK}>
    <Header activeLink={ACTIVE_LINK} />
 
    <section class="hero-page">
        <div class="container">
            <h1 style="color:var(--error);">Поверка и Метрология</h1>
            <p>
                Организация и проведение поверочных работ в строгом соответствии с ФЗ №102. Работаем со всеми типами приборов учета тепла, воды и газа.
                **Срочная поверка** с минимальным простоем оборудования.
            </p>
            <a href="#contact-block" class="btn">Заказать поверку</a>
        </div>
    </section>

    <section class="section" style="padding-top: 0;">
        <MetrologiaCards />
        <MetrologiaProcess />
    </section>

    {/* Блок призыва к действию: Метрологический отдел */}
    <ConstrainedContactBanner
        title="Связаться с метрологическим отделом"
        phone={PHONE_METRO}
        email={EMAIL_METRO}
        buttonText="Запросить сроки и стоимость поверки"
        id="contact-block"
    />

    <Footer />
</MainLayout>