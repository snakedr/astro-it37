---
import MainLayout from '@/layouts/MainLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro'; 
import AIDashboard from '@/components/AIDashboard.astro';
import ControlFeatures from '@/components/ControlFeatures.astro';
import ControlSavingsBlock from '@/components/ControlSavingsBlock.astro';
import ControlMonitoringStats from '@/components/ControlMonitoringStats.astro';
import ControlContactCard from '@/components/ControlContactCard.astro';


const ACTIVE_LINK = "Диспетчеризация";
---

<MainLayout title="Диспетчеризация | IT37" activeLink={ACTIVE_LINK}>

    <Header activeLink={ACTIVE_LINK} />
    
    <section class="hero-page">
        <div class="container">
            <h1 style="color:var(--accent);">AI-Диспетчеризация</h1>
            <p>
                Плавный переход от ручного контроля к интеллектуальному управлению. Алгоритмы выявления аномалий и предиктивная аналитика берут мониторинг на себя 24/7 — снижая риски, повышая стабильность и сокращая затраты до 25%.
            </p>
            <a href="#dashboard-block" class="btn">Посмотреть Дашборд</a>
        </div>
    </section>

    <section class="section" style="padding-top: 0;">
        <div class="container">
            <AIDashboard />
        </div>
        
        <div class="container">
            <ControlFeatures />
        </div>
        
        <div class="container">
            <ControlSavingsBlock />
        </div>

        <div class="container">
            <ControlMonitoringStats />
        </div>
        
        {/* !!! ТРЕТИЙ (ФИНАЛЬНЫЙ) БЛОК КОНТАКТОВ !!! */}
        <div class="container">
            <ControlContactCard /> 
        </div>
        
    </section>

    {/* ContactBanner УДАЛЕН, так как его заменил ControlContactCard */}
    <Footer />

</MainLayout>