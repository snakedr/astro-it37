---
// Получаем время при компиляции (сборке) проекта
const now = new Date();
const timeOptions = { hour: '2-digit', minute: '2-digit', second: '2-digit' };
const dateOptions = { month: '2-digit', day: '2-digit', year: 'numeric' };

// Формат для шапки: ГГ.ММ.ДД - ЧЧ:ММ:СС
const fullTimestamp = `${now.toLocaleDateString('ru-RU', dateOptions)} - ${now.toLocaleTimeString('ru-RU', timeOptions)}`;

// Формат для лога: ЧЧ:ММ:СС
const logTimeString = now.toLocaleTimeString('ru-RU', timeOptions);
---

<div class="container maintenance-viz-block">
    <div class="screen-wrapper">
        <div class="screen-header">
            Мониторинг теплового узла (UDU-27/05) | Время: **{fullTimestamp}**
        </div>
        <div class="screen-content">
            <div class="param-group">
                <span class="param-label">Температура подачи (T1):</span>
                <span class="param-value active">68.5 °C</span>
            </div>
            <div class="param-group">
                <span class="param-label">Температура обратки (T2):</span>
                <span class="param-value">47.2 °C</span>
            </div>
            <div class="param-group">
                <span class="param-label">Давление в сети:</span>
                <span class="param-value">5.8 бар</span>
            </div>
            <div class="log-message">
                <span class="timestamp">{logTimeString} |</span> Система работает в штатном режиме.
            </div>
        </div>
    </div>
</div>

<style>
    /* ... Стили, которые мы добавили ранее, остаются здесь ... */
    .maintenance-viz-block {
        padding: 0; /* Убираем лишний паддинг, он задан в родительском файле */
    }
    .screen-wrapper {
        width: 100%; /* Занимает всю отведенную ширину */
        border: 1px solid var(--accent);
        border-radius: 4px;
        overflow: hidden;
        background: #0a0a0a;
        box-shadow: 0 0 20px var(--accent-dim);
    }
    .screen-header {
        background: var(--accent);
        color: var(--text-inverted);
        padding: 10px 15px;
        font-size: 14px;
        font-weight: 700;
        text-align: left;
        font-family: 'Orbitron', sans-serif;
    }
    /* ... остальные стили ... */
    .param-value.active {
        color: #00ff66;
    }
    .log-message {
        margin-top: 20px;
        padding-top: 10px;
        border-top: 2px solid var(--accent);
        color: #aaa;
        font-size: 13px;
    }
    .timestamp {
        color: var(--accent);
        font-weight: 700;
    }
</style>