<style>
    .proactive-info {
        padding-top: 60px;
        padding-bottom: 80px;
        display: grid;
        grid-template-columns: 1.5fr 1fr;
        gap: 60px;
        align-items: center;
    }
    .info-content h2 {
        font-size: 32px;
        margin-bottom: 20px;
    }
    .info-content p {
        color: var(--text-gray);
        margin-bottom: 30px;
        line-height: 1.6;
    }
    .visual-placeholder {
        background: var(--bg-panel);
        border: 1px solid var(--border);
        border-radius: 5px;
        height: 300px; /* Фиксированная высота для макета */
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-gray);
        font-style: italic;
    }

    @media (max-width: 1000px) {
        .proactive-info {
            grid-template-columns: 1fr;
            gap: 40px;
        }
        .info-content h2 {
            font-size: 28px;
        }
    }
</style>