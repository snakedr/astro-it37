---
const { activeLink = "home" } = Astro.props;
---

<header>
  <div class="container nav-flex">
    <a href="/" class="logo">IT<span>37</span></a>

    <button class="menu-toggle" aria-label="Открыть меню">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>

    <nav class="nav-links">
      <a href="/" class={activeLink === 'home' ? 'active' : ''}>Главная</a>
      <a href="/design" class={activeLink === 'design' ? 'active' : ''}>Проектирование</a>
      <a href="/montazh" class={activeLink === 'montazh' ? 'active' : ''}>Монтаж</a>
      <a href="/control" class={activeLink === 'control' ? 'active' : ''}>Диспетчеризация</a>
      <a href="/metrologia" class={activeLink === 'metrologia' ? 'active' : ''}>Метрология</a>
      <a href="/maintenance" class={activeLink === 'maintenance' ? 'active' : ''}>Обслуживание</a>
      <a href="/contacts" class={activeLink === 'contacts' ? 'active' : ''}>Контакты</a>
    </nav>
    <a href="/contacts" class="btn primary desktop-only">Запрос на аудит</a>
  </div>
</header>

<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: rgba(5, 5, 7, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border);
    z-index: 100;
    padding: 15px 0;
  }
  .nav-flex {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .logo {
    font-family: 'Orbitron', sans-serif;
    font-size: 24px;
    color: var(--text-main);
    letter-spacing: 2px;
    font-weight: 900;
    cursor: pointer;
        text-decoration: none;
  }
  .logo span {
    color: var(--accent);
    text-shadow: 0 0 10px var(--accent-dim);
  }

  .nav-links {
    display: flex;
    gap: 30px;
    margin-left: auto;
    margin-right: 30px;
  }

  .nav-links a {
    color: var(--text-gray);
    text-decoration: none;
    font-family: 'Roboto', sans-serif;
    font-size: 15px;
    padding: 5px 0;
    transition: color 0.3s, border-bottom 0.3s, text-shadow 0.3s;
    border-bottom: 2px solid transparent;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: var(--accent);
    border-bottom-color: var(--accent);
        text-shadow: 0 0 8px var(--accent-dim);
  }
  .nav-links a.active {
    font-weight: 500;
  }

  .menu-toggle {
    display: none;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 10px;
    z-index: 101;
    margin-left: auto;
    order: 2;
  }

  .menu-toggle .bar {
    display: block;
    width: 25px;
    height: 3px;
    margin: 5px 0;
    background-color: var(--accent);
    transition: 0.4s;
    border-radius: 1px;
        box-shadow: 0 0 5px var(--accent-dim);
  }

    .menu-toggle.open .bar:nth-child(1) {
        transform: translateY(8px) rotate(45deg);
    }

    .menu-toggle.open .bar:nth-child(2) {
        opacity: 0;
    }

    .menu-toggle.open .bar:nth-child(3) {
        transform: translateY(-8px) rotate(-45deg);
    }

  .btn.desktop-only {
    order: 3;
  }

  @media (max-width: 900px) {
    .menu-toggle { display: block; }
    .btn.desktop-only { display: none; }
   
    .nav-links {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: var(--bg-deep);
      padding-top: 100px;
      flex-direction: column;
      gap: 0;
      transform: translateX(100%);
      transition: transform 0.4s ease-in-out;
      z-index: 99;
    }
   
    .nav-links a {
      padding: 15px 20px;
      border-bottom: 1px solid var(--border);
      border-left: 5px solid transparent;
      font-size: 18px;
      font-family: 'Orbitron', sans-serif;
      transition: border-left-color 0.3s, color 0.3s;
    }

    .nav-links a:hover,
    .nav-links a.active {
      border-left-color: var(--accent);
      border-bottom: 1px solid var(--accent);
            text-shadow: 0 0 10px var(--accent-dim);
    }

    .nav-links.open {
      transform: translateX(0);
    }
  }
</style>