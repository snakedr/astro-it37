---
const deviceName = "СПТ-961";
---

<div class="container metrologia-viz-block">
    <div class="device-display-wrapper">
        <div class="device-display-header">
            Эмуляция считывания данных | {deviceName}
        </div>
        <div class="device-display-screen">
            <div id="log-container" class="log-output"></div>
            
            <div class="screen-footer">
                <div class="loading-bar"></div>
                <div class="timer-container">
                    <span class="timer-label">ВРЕМЯ СЕАНСА:</span>
                    <span id="session-timer">00:00:000</span>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Скрипт выполняется на клиенте
    const messages = [
        "Соединение с прибором на заданной скорости...",
        "Проверка параметров прибора...",
        "Чтение настроечных параметров...",
        "Проверка наличия архивов...",
        "Чтение суточного архива (ОК)...",
        "Чтение часового архива (ОК)...",
        "Проверка контрольной суммы...",
        "Данные успешно считаны."
    ];

    const logContainer = document.getElementById('log-container');
    const timerElement = document.getElementById('session-timer');
    let startTime;
    let timerInterval;

    // Функция форматирования времени
    function formatTime(elapsed) {
        const ms = Math.floor(elapsed % 1000).toString().padStart(3, '0');
        const s = Math.floor((elapsed / 1000) % 60).toString().padStart(2, '0');
        const m = Math.floor((elapsed / (1000 * 60)) % 60).toString().padStart(2, '0');
        return `${m}:${s}:${ms}`;
    }

    // Запуск таймера
    function startTimer() {
        startTime = Date.now();
        timerInterval = setInterval(() => {
            const elapsed = Date.now() - startTime;
            if(timerElement) timerElement.innerText = formatTime(elapsed);
        }, 30); // Обновление каждые 30мс
    }

    // Функция паузы (для имитации работы)
    const delay = (ms) => new Promise(resolve => setTimeout(resolve, ms));

    // Основной цикл анимации
    async function runSimulation() {
        while (true) { // Бесконечный цикл
            if(logContainer) logContainer.innerHTML = ''; // Очистка экрана
            
            // Проход по всем сообщениям
            for (const msg of messages) {
                if (!logContainer) break;
                
                const p = document.createElement('p');
                p.className = 'log-line';
                p.textContent = '> ' + msg;
                logContainer.appendChild(p);
                
                // Случайная задержка между строками (от 300мс до 1200мс) имитирует реальную работу
                await delay(300 + Math.random() * 900);
            }

            // Пауза перед перезапуском
            await delay(2000);
        }
    }

    // Запускаем при загрузке
    startTimer();
    runSimulation();
</script>

<style>
    .metrologia-viz-block {
        padding: 60px 0;
        text-align: center;
    }
    .device-display-wrapper {
        max-width: 700px;
        margin: 0 auto;
        border: 1px solid var(--error);
        border-radius: 4px;
        overflow: hidden;
        background: #000;
        box-shadow: 0 0 25px rgba(255, 59, 48, 0.15); /* Легкое свечение цветом ошибки */
    }
    .device-display-header {
        background: var(--error);
        color: white;
        padding: 8px 15px;
        font-size: 13px;
        text-align: left;
        font-weight: 700;
        font-family: 'Orbitron', sans-serif;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    .device-display-screen {
        background: #0a0a0a;
        padding: 20px;
        text-align: left;
        min-height: 300px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        font-family: 'Consolas', 'Courier New', monospace;
    }
    .log-output {
        color: #1aff00; /* Ярко-зеленый терминальный цвет */
        font-size: 14px;
        line-height: 1.6;
    }
    /* Глобальные стили для динамически создаваемых элементов (можно через :global в Astro) */
    :global(.log-line) {
        margin: 0;
        padding: 0;
        animation: fadeIn 0.3s ease-in;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateX(-5px); }
        to { opacity: 1; transform: translateX(0); }
    }

    .screen-footer {
        margin-top: 20px;
        border-top: 1px solid #333;
        padding-top: 10px;
    }
    
    .loading-bar {
        height: 2px;
        background: var(--error);
        width: 100%;
        margin-bottom: 10px;
        animation: scan 2s infinite linear;
        opacity: 0.5;
    }

    @keyframes scan {
        0% { width: 0%; opacity: 0; }
        50% { opacity: 1; }
        100% { width: 100%; opacity: 0; }
    }

    .timer-container {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        gap: 10px;
        color: var(--error);
        font-size: 14px;
    }
    .timer-label {
        opacity: 0.7;
        font-size: 12px;
    }
    #session-timer {
        font-weight: bold;
        font-size: 16px;
        font-variant-numeric: tabular-nums; /* Чтобы цифры не прыгали */
        letter-spacing: 1px;
    }
</style>