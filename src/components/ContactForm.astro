<div class="form-container">
    <style>
        /* CSS styles for clean and centered look (using local styles) */
        .form-container {
            max-width: 600px;
            margin: 40px auto;
            padding: 20px;
        }

        /* General form element styles */
        #contactForm label, 
        #contactForm input[type="text"], 
        #contactForm input[type="email"], 
        #contactForm textarea {
            display: block;
            margin-bottom: 15px;
            width: 100%;
            padding: 10px;
            box-sizing: border-box;
            border: 1px solid var(--text-gray); /* Using global variable for clean look */
            border-radius: 4px;
            font-size: 16px;
            background-color: transparent;
            color: var(--text-main);
        }

        #contactForm textarea {
            resize: vertical;
        }

        /* FIX: Use var(--accent) for the button color */
        #contactForm button[type="submit"] {
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            
            /* Using ACCENT color for background and BG-DEEP for text */
            background-color: var(--accent);
            color: var(--bg-deep); /* Dark text for contrast on light accent */

            cursor: pointer;
            font-size: 16px;
            font-weight: 700;
            transition: 0.3s;
        }

        #contactForm button[type="submit"]:hover {
            /* Keep hover effect simple by reducing opacity */
            opacity: 0.8;
            /* Using a fixed color in case var(--accent) is too bright */
            /* background-color: #00C8C8; */
        }
    </style>

    <form id="contactForm">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        <label for="message">Message:</label>
        <textarea id="message" name="message" rows="4" required></textarea>

        <button type="submit">Отправить</button> 
        
        <p id="formStatus" style="margin-top: 15px; font-weight: bold;"></p>
    </form>
</div>

<script>
    // Client-side JavaScript logic to handle form submission via fetch
    const form = document.getElementById('contactForm');
    const statusText = document.getElementById('formStatus');

    form.addEventListener('submit', async (event) => {
        event.preventDefault(); // Prevents default browser submission

        statusText.textContent = 'Sending...';
        statusText.style.color = 'var(--text-gray)';

        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        try {
            const response = await fetch('/api/submit', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            });

            const result = await response.json();

            if (response.ok) {
                statusText.textContent = 'Success: Your application has been sent.';
                statusText.style.color = 'var(--success)';
                form.reset();
            } else {
                statusText.textContent = `Error: ${result.message || 'An unknown error occurred.'}`;
                statusText.style.color = 'var(--orange)';
            }
        } catch (error) {
            statusText.textContent = 'Error: Could not connect to the server.';
            statusText.style.color = 'var(--orange)';
        }
    });
</script>