---
import ContactBanner from '@/components/ContactBanner.astro';

// Получаем все пропсы и передаем их дальше
const { title, phone, email, buttonText, id } = Astro.props;
---
<div class="constrained-contact-wrapper">
    <ContactBanner 
        title={title}
        phone={phone}
        email={email}
        buttonText={buttonText}
        id={id}
    />
</div>

<style>
    /* Эта обертка ограничивает ширину карточки и центрирует ее */
    .constrained-contact-wrapper {
        max-width: 900px; /* Ограничиваем до ширины, подходящей для карточки */
        margin: 0 auto 80px auto; /* Центрируем и добавляем отступ снизу */
        padding: 0 15px; /* Боковые отступы для адаптивности */
    }
</style>