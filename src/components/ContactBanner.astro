---
// !!! 1. ПРИНИМАЕМ ПЕРЕМЕННЫЕ (PROPS) ВМЕСТО ЖЕСТКОГО КОДИРОВАНИЯ !!!
const { 
    title = "Связаться с отделом", // Заголовок по умолчанию
    phone = "Телефон не указан",
    email = "email@it37.ru",
    buttonText = "Заказать звонок",
    id
} = Astro.props;
---
<section id={id} class="contact-banner">
    <h2>{title}</h2>
    <p>
        **Телефон:** {phone} | **E-mail:** {email}
    </p>
    <a href="/contacts" class="btn">{buttonText}</a>
</section>

<style>
    /* Весь CSS-код остаётся прежним, он просто стилизует принятые переменные */
    .contact-banner {
    background: var(--bg-panel);
    color: var(--text-main);
    padding: 35px 50px;
    text-align: center;
    margin-top: 80px;
    border: 1px solid var(--accent);
  }
  .contact-banner h2 {
    color: var(--accent);
    margin-bottom: 15px;
    font-family: 'Orbitron', sans-serif;
    text-transform: uppercase;
    letter-spacing: 2px;
  }
  .contact-banner p {
    color: var(--text-gray);
    margin-bottom: 25px;
    font-size: 16px;
  }
  .contact-banner a.btn {
    background: var(--bg-deep);
    color: var(--accent);
    border: 1px solid var(--accent);
    padding: 16px 32px;
    text-decoration: none;
    font-family: 'Orbitron', sans-serif;
    font-weight: 700;
    display: inline-block;
    transition: 0.4s;
  }
  .contact-banner a.btn:hover { background: #333; }
</style>